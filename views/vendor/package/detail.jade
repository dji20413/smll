extends ../../layout
block content
	#content-main		
		h1 #{package.name}
			span(style="margin-left: 12px; font-size: 12px;")
				a(href="/vendor/package/#{package.id}/edit") edit  

		table.smll-detail.pull-left.table
			tr
				th Author
				td= package.author.name
			tr
				th Language
				td= package.language
			tr
				th Level
				td= package.level
		img.img75.img-polaroid.pull-right(src="/img/package/#{package.picture}")
		.clearfix

		hr

		.tab-description
			!{package.desc}

		hr

		.tab-speech
			h2 Speeches
				span(style="margin-left: 12px; font-size: 12px;")
					a(href="/vendor/package/#{package.id}/speech/new") add new speech 
				
			.speech-list
				table.table
					th #
					th Scripts
					th Score
					th Listen 
					
					- each sp in speeches
						tr
							td
								a(href="/vendor/package/#{package.id}/speech/#{sp.id}/edit")=  sp.id
							td= sp.script
							td= sp.score
							td 
								a.sm2-play(href="#{sp.file}") Play 


	#content-sidebar
		h1= package.author.name

		hr
		
		h1= package.level 


	.clearfix
